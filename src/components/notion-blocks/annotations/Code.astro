---
/* @jsxImportSource astro */
import type { RichText } from "@/lib/interfaces.ts";

export interface Props {
	richText: RichText;
}

const { richText } = Astro.props;
---

{
	richText.Annotation.Code ? (
		<code class="rounded-sm border-none bg-gray-100 px-1 font-mono text-rose-800 dark:bg-gray-800 dark:text-rose-300">
			<slot />
		</code>
	) : (
		<slot />
	)
}
