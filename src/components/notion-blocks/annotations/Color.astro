---
import type { RichText } from "@/lib/interfaces.ts";
import { getNotionColorToTailwindColor } from "@/lib/style-helpers.ts";

export interface Props {
	richText: RichText;
}

const { richText } = Astro.props;
---

{
	richText.Annotation.Color &&
	!["default", "default_background", "default-background"].includes(richText.Annotation.Color) ? (
		<span class={`${getNotionColorToTailwindColor(richText.Annotation.Color)} rounded-sm px-1`}>
			<slot />
		</span>
	) : (
		<slot />
	)
}
