---
import { type EnrichedTweet, formatNumber } from "../utils.js";
// import { TweetActionsCopy } from './tweet-actions-copy.jsx'
import styles from "./tweet-actions.module.css";

interface Props {
	tweet: EnrichedTweet;
}

const { tweet } = Astro.props;
const favoriteCount = formatNumber(tweet.favorite_count);
---

<div class={styles.actions} data-pagefind-ignore="all">
	<a
		class={styles.like}
		href={tweet.like_url}
		target="_blank"
		rel="noopener noreferrer"
		aria-label={`Like. This Tweet has ${favoriteCount} likes`}
	>
		<div class={styles.likeIconWrapper}>
			<svg viewBox="0 0 24 24" class={styles.likeIcon} aria-hidden="true">
				<g>
					<path
						d="M20.884 13.19c-1.351 2.48-4.001 5.12-8.379 7.67l-.503.3-.504-.3c-4.379-2.55-7.029-5.19-8.382-7.67-1.36-2.5-1.41-4.86-.514-6.67.887-1.79 2.647-2.91 4.601-3.01 1.651-.09 3.368.56 4.798 2.01 1.429-1.45 3.146-2.1 4.796-2.01 1.954.1 3.714 1.22 4.601 3.01.896 1.81.846 4.17-.514 6.67z"
					></path>
				</g>
			</svg>
		</div>
		<span class={styles.likeCount}>{favoriteCount}</span>
	</a>
	<a
		class={styles.reply}
		href={tweet.reply_url}
		target="_blank"
		rel="noopener noreferrer"
		aria-label="Reply to this Tweet on Twitter"
	>
		<div class={styles.replyIconWrapper}>
			<svg viewBox="0 0 24 24" class={styles.replyIcon} aria-hidden="true">
				<g>
					<path
						d="M1.751 10c0-4.42 3.584-8 8.005-8h4.366c4.49 0 8.129 3.64 8.129 8.13 0 2.96-1.607 5.68-4.196 7.11l-8.054 4.46v-3.69h-.067c-4.49.1-8.183-3.51-8.183-8.01z"
					></path>
				</g>
			</svg>
		</div>
		<span class={styles.replyText}>Reply</span>
	</a>
	{
		tweet.conversation_count !== 0 && (
			<a
				class={styles.read}
				href={tweet.url}
				target="_blank"
				rel="noopener noreferrer"
				aria-label="Read replies to this tweet"
			>
				<div class={styles.readIconWrapper}>
					<svg viewBox="0 0 24 24" class={styles.readIcon} aria-hidden="true">
						<g>
							<path d="M12 9a3 3 0 0 0-3 3a3 3 0 0 0 3 3a3 3 0 0 0 3-3a3 3 0 0 0-3-3m0 8a5 5 0 0 1-5-5a5 5 0 0 1 5-5a5 5 0 0 1 5 5a5 5 0 0 1-5 5m0-12.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5" />
						</g>
					</svg>
				</div>
				<span class={styles.readText}>
					{tweet.conversation_count === 1
						? `${formatNumber(tweet.conversation_count)} reply`
						: `${formatNumber(tweet.conversation_count)} replies`}
				</span>
			</a>
		)
	}
	<!-- <TweetActionsCopy tweet={tweet} /> -->
</div>
